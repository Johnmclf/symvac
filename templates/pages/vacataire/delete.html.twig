{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Suppression d'un vacataire</h1>
    <p>Êtes-vous sûr de vouloir supprimer le vacataire <strong>{{ vacataire.nom }}</strong> ?</p>

    <form method="post">
        <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
        <a href="{{ path('app_vacataire') }}" class="btn btn-secondary">Annuler</a>
    </form>
</div>
{% endblock %}
